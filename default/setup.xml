<setup>
    <block title="Alert Manager Jira Alert Actions">
        <text>Configure Alert Manager Jira Alert Actions</text>
    </block>

    <block title="Server" endpoint="admin/jira_alerts_install" entity="alert_manager-jira">
        <input field="jira_url">
            <label>Server Base URL</label>
            <type>text</type>
        </input>
        <input field="jira_username">
            <label>Jira Username</label>
            <type>text</type>
        </input>
        <input field="jira_password">
            <label>Jira Password</label>
            <type>password</type>
        </input>
    </block>
    <block title="Jira Default Settings" endpoint="admin/jira_alerts_install" entity="alert_manager-jira">
        <input field="default_project_key">
            <label>Default Project</label>
            <type>text</type>
        </input>
        <input field="default_issue_type">
            <label>Default Issue Type</label>
            <type>text</type>
        </input>
        <input field="default_priority">
            <label>Default Priority</label>
            <type>text</type>
        </input>
        <input field="default_assignee">
            <label>Default Assignee</label>
            <type>text</type>
        </input>
    </block>
    <block title="Jira Service Desk Default Settings" endpoint="admin/jira_alerts_install" entity="alert_manager-jira">
        <input field="jira_servicedesk_mode">
            <label>Default to Jira Service Desk Mode</label>
            <type>bool</type>
        </input>
        <input field="default_servicedesk_id">
            <label>Default Servicedesk ID</label>
            <type>text</type>
        </input>
        <input field="default_requesttype_id">
            <label>Default Requesttype ID</label>
            <type>text</type>
        </input>
    </block>
</setup>
